{
  "name": "core-scout",
  "version": "1.0.0",
  "description": "CORE-Scout desktop application",
  "author": "CORE Scout Team",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "cross-spawn": "^7.0.0"
  },
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.389MIB.corescout",
    "productName": "Scout",
    "files": [
      "electron-main.js",
      "preload.js",
      "user_interface/build/**",
      "assets/**"
    ],
    "extraResources": [
      {
        "from": "dist/core-scout-backend.exe",
        "to": "backend/core-scout-backend.exe"
      }
    ],
    "asarUnpack": [
      "**/backend/**",
      "**/resources/backend/**"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/app-icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  }
}